<body class="background-main">
    </br>
  <h1 style="text-align:center"> All Pets </h1>
    </br>
  <div class="card-deck">
    <div class="container">
      <div class="row">
        <% @pets.each do |pet| %>
          <div class="col-md-4" id="pets-<%=pet.id%>">
            <div class="card bg-dark text-white mb-4 shadow">
              <img src=<%=pet.image%> class="card-img-top">
              <div class="card-body">
                <h3><%= link_to pet.name, "/pets/#{pet.id}" %></h3>
                <p>Age: <%= pet.approx_age %></p>
                <p>Sex: <%= pet.sex %></p>
                <p>Shelter: <%= link_to "#{pet.shelter.name}", "/shelters/#{pet.shelter.id}" %></p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <%= link_to "Edit Pet", "/pets/#{pet.id}/edit", class: 'btn btn-sm btn-outline-secondary' %>
                    <%= link_to "Delete Pet", "/pets/#{pet.id}", method: :delete, class: 'btn btn-sm btn-outline-secondary' %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>       
      </div>
    </div>
  </div>       
</body>