<body style="background-color:lightblue;font-family:arial;text-align:center">
<h1>New Review for <%= @shelter.name %></h1>
    <br/>
    <br/>
    <br/>
  <%= form_tag "/shelters/#{@shelter.id}/reviews" do %>
    <%= label_tag :title %>
    <%= text_field_tag :title %>
      <br/>
    <%= radio_button_tag(:rating, 1) %>
    <%= label_tag 1 %>
    <%= radio_button_tag(:rating, 2) %>
    <%= label_tag 2 %>
    <%= radio_button_tag(:rating, 3) %>
    <%= label_tag 3 %>
    <%= radio_button_tag(:rating, 4) %>
    <%= label_tag 4 %>
    <%= radio_button_tag(:rating, 5) %>
    <%= label_tag 5 %>
      <br/>
    <%= label_tag :content %>
    <%= text_field_tag :content %>
      <br/>
    <%= label_tag :picture %>
    <%= text_field_tag :picture %>
      <br/>
      <br/>
    <%= submit_tag 'Create Review' %>
      <br/>
        <br/>
      <br/>
    <br/>
  <%= link_to "Back to Shelter", "/shelters/#{@shelter.id}" %>
<% end %>
</body>
