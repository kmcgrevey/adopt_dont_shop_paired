<body class="background-edit" style="text-align:center">
    <br/>
<h1>Edit Review for <%= @review.shelter.name %></h1>    
    <br/>
    <br/>
  <%= form_tag "/reviews/#{@review.id}", method: :patch do %>
  <%= label_tag :title %>
  <%= text_field_tag :title, "#{@review.title}" %>
    <br/>
  <%= label_tag "Rating" %>  
  <%= radio_button_tag(:rating, 1) %>
  <%= label_tag 1 %>
  <%= radio_button_tag(:rating, 2) %>
  <%= label_tag 2 %>
  <%= radio_button_tag(:rating, 3) %>
  <%= label_tag 3 %>
  <%= radio_button_tag(:rating, 4) %>
  <%= label_tag 4 %>
  <%= radio_button_tag(:rating, 5) %>
  <%= label_tag 5 %>
    <br/>
  <%= label_tag :content %>
  <%= text_field_tag :content, "#{@review.content}" %>
    <br/>
  <%= label_tag :picture %>
  <%= text_field_tag :picture, "#{@review.picture}" %>
    <br/>
    <br/>
  <%= submit_tag 'Update Review' %>
    <br/>
    <br/>
  <%= link_to "Back to Shelter", "/shelters/#{@review.shelter.id}" %>
<% end %>
</body>
