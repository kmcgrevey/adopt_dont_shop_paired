<body class="background-main">
  <br/>
  <h1 style="text-align:center;"> All Shelters </h1>
  <br/>
  <% @shelters.each do |shelter| %>
    <div class="card text-dark border-dark border-2 mb-2 w-75 bg-transparent mx-auto" id="shelter-<%=shelter.id%>">
      <div class="card-body">
        <h3 class="card-title"><%= link_to "#{shelter.name}", "/shelters/#{shelter.id}" %></h3>
        <div class="btn-group">
          <%= link_to "Edit Shelter", "/shelters/#{shelter.id}/edit", class: 'btn btn-sm btn-dark' %>
          <%= link_to "Delete Shelter", "/shelters/#{shelter.id}", method: :delete, class: 'btn btn-sm btn-dark' %>
        </div>
      </div>
    </div>
  <% end %>
  <div class="d-flex justify-content-center">
    <%= link_to "New Shelter", "/shelters/new", class: 'btn btn-primary w-75' %>
  </div>
</body>
